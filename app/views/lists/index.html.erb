<div class="banner banner-home"
     style="background-image: linear-gradient(rgba(0,0,0,0.55), rgba(0,0,0,0.65)),
            url('https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?auto=format&fit=crop&w=2200&q=80');">
  <div class="container text-center">
    <h1>Save any kind of movies</h1>
    <p><%= @lists.first&.name || "Classic" %></p>
  </div>
</div>

<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">My Lists</h2>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-success" %>
  </div>

  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-12 col-md-6 mb-4">
        <%= link_to list_path(list), class: "text-decoration-none" do %>
          <% background_url =
              if list.respond_to?(:photo_url) && list.photo_url.present?
                list.photo_url
              else
                "https://images.unsplash.com/photo-1485846234645-a62644f84728?auto=format&fit=crop&w=1600&q=80"
              end
          %>

          <div class="card-category"
               style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
                      url('<%= background_url %>');">
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
